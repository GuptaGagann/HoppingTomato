    <TextView
        android:id="@+id/faq_question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word" />

    <TextView
        android:id="@+id/faq_answer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"/>
</LinearLayout>